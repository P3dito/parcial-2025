@model Parcial_2025_I.Models.Jugador
@{
    ViewData["Title"] = "Editar Jugador";
    var equipos = ViewBag.Equipos as List<Parcial_2025_I.Models.Equipo>;
}

<h2>Editar Jugador</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label>Edad</label>
        <input asp-for="Edad" class="form-control" />
    </div>

    <div class="form-group">
        <label>Posici√≥n</label>
        <input asp-for="Posicion" class="form-control" />
    </div>

    <div class="form-group">
        <label>Equipo</label>
        <select asp-for="EquipoId" class="form-control">
            @foreach (var equipo in equipos)
            {
                <option value="@equipo.Id" selected="@(equipo.Id == Model.EquipoId)">
                    @equipo.Nombre
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
</form>
