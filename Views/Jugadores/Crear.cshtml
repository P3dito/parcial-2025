@model Parcial_2025_I.Models.Jugador
@{
    ViewData["Title"] = "Registrar Jugador";
    var equipos = ViewBag.Equipos as List<Parcial_2025_I.Models.Equipo>;
}

<h2>Registrar Jugador</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Edad</label>
        <input asp-for="Edad" type="number" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Posici√≥n</label>
        <input asp-for="Posicion" class="form-control" />
        <span asp-validation-for="Posicion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Equipo</label>
        <select asp-for="EquipoId" class="form-control">
            <option value="">-- Selecciona un equipo --</option>
            @foreach (var equipo in equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
        <span asp-validation-for="EquipoId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Registrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
